{
  "name": "@mdap/dashboard",
  "version": "0.1.0",
  "description": "MDAP Dashboard - Web UI for monitoring MDAP workflows",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mdap-dashboard": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "public"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts --clean && cp -r src/public dist/",
    "dev": "tsup src/index.ts src/cli.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mdap",
    "dashboard",
    "monitoring",
    "llm",
    "ai",
    "agents"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mdap/core": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
