{
  "name": "@mdap/claude-agent",
  "version": "0.1.0",
  "description": "MDAP integration for Claude Agent SDK - Build reliable agents with voting-based error correction",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "pnpm exec tsc -b ../core && pnpm exec tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "claude",
    "claude-agent-sdk",
    "claude-code",
    "llm",
    "ai",
    "agents",
    "reliability",
    "voting",
    "mdap"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mdap/core": "workspace:*"
  },
  "peerDependencies": {
    "@anthropic-ai/claude-agent-sdk": ">=0.1.0"
  },
  "peerDependenciesMeta": {
    "@anthropic-ai/claude-agent-sdk": {
      "optional": true
    }
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
