{
  "name": "@mdap/core",
  "version": "0.1.0",
  "description": "Core MDAP SDK - Voting-based error correction for LLM agents",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "browser": "./dist/mdap.global.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./browser": {
      "import": "./dist/mdap.global.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean && tsup src/index.ts --format iife --global-name MDAP --outDir dist --no-dts && mv dist/index.global.js dist/mdap.global.js",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "bench": "vitest bench",
    "bench:run": "vitest bench --run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "llm",
    "ai",
    "agents",
    "error-correction",
    "voting",
    "reliability",
    "mdap"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
